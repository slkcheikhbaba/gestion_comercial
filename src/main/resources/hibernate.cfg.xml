<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- ============ PARAMÈTRES DE CONNEXION ============ -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/gestion_commerciale</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">7968</property>

        <!-- ============ PARAMÈTRES HIBERNATE ============ -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <!-- Encodage UTF-8 -->
        <property name="hibernate.connection.characterEncoding">utf8</property>
        <property name="hibernate.connection.useUnicode">true</property>

        <!-- Pool de connexions -->
        <property name="hibernate.connection.pool_size">10</property>
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>

        <!-- ============ MAPPING DES ENTITÉS ============ -->
        <mapping class="model.Personne"/>
        <mapping class="model.Ville"/>
        <mapping class="model.Agence"/>
        <mapping class="model.Exploitation"/>
        <mapping class="model.Dirige"/>
        <mapping class="model.EstComptablePour"/>
        <mapping class="model.EstComptableDans"/>

    </session-factory>
</hibernate-configuration>